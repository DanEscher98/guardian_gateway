{
  "entryFile": "src/server.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["./src/controllers/**/*.ts"],
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3,
    "basePath": "/",
    "controllerPathGlobs": ["./src/controllers/**/*.ts"],
    "securityDefinitions": {
      "bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "routes": {
    "routesDir": "src",
    "authenticationModule": "./src/utils/authentication.ts"
  }
}
